{
  "name": "splunk-mcp",
  "version": "0.3.0",
  "description": "A Model Context Protocol server for interacting with Splunk Enterprise/Cloud",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "splunk-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelSp/splunk-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/MichaelSp/splunk-mcp/issues"
  },
  "homepage": "https://github.com/MichaelSp/splunk-mcp#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "keywords": [
    "mcp",
    "splunk",
    "model-context-protocol"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
